<style>
    /* General Reset */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f8f9fa;
    color: #333;
    line-height: 1.6;
}

/* Flex Container */
.flex-container {
    display: flex;
    min-height: 100vh;
}

/* Sidebar */
.sidebar {
    background-color: #2c3e50;
    color: white;
}

.sidebar h1, .sidebar a {
    color: white;
    text-decoration: none;
    margin-bottom: 10px;
}

/* Main Content */
.main-content {
    flex: 1;
    background-color: #ffffff;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

/* Header */
.header-wrap {
    margin-bottom: 20px;
    text-align: center;
}

.header-text {
    font-size: 2rem;
    color: #34495e;
    font-weight: bold;
}

/* Form Section */
.form-section {
    display: flex;
    gap: 20px;
    justify-content: center;
    margin-bottom: 30px;
}

.select-box .dropdown,
.date-select,
.submit-button {
    padding: 10px 15px;
    font-size: 16px;
    border: 1px solid #ced4da;
    border-radius: 5px;
    transition: all 0.3s ease-in-out;
}

.dropdown:focus,
.date-select:focus,
.submit-button:focus {
    border-color: #3498db;
    outline: none;
}

.submit-button {
    background-color: #3498db;
    color: white;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.3s ease-in-out;
}

.submit-button:hover {
    background-color: #2980b9;
}

/* Table Section */
.table-section {
    margin-top: 20px;
    overflow-x: auto;
}

.menu-table {
    width: 100%;
    border-collapse: collapse;
    background-color: white;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    overflow: hidden;
}

.menu-table thead {
    background-color: #3498db;
    color: white;
}

.menu-table th,
.menu-table td {
    padding: 12px;
    text-align: center;
    border: 1px solid #ddd;
}

.menu-table tbody tr:nth-child(even) {
    background-color: #f2f2f2;
}

.menu-table tbody tr:hover {
    background-color: #e8f4fc;
    cursor: pointer;
    transition: background-color 0.3s ease-in-out;
}

</style>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thống kê theo năm</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div id="stat-form-box" class="flex-container">
        <aside class="sidebar">
            {{> admin_partials/sidebar}}
        </aside>

        <div id="main-form" class="main-content">
            <header class="header-wrap">
                <h1 class="header-text">Thống kê theo năm</h1>
            </header>

            <!-- Form Section -->
            <form id="daily-form" method="POST" class="form-section">
                <div class="select-box">
                    <select onchange="document.getElementById('MaCN').value = this.value" class="dropdown">
                        <option value="" disabled {{#unless MaCN}}selected{{/unless}}>-- Select Chi Nhánh --</option>
                        {{#each chinhanh}}
                        <option value="{{this.MaCN}}">{{this.TenCN}}</option>
                        {{/each}}
                    </select>
                </div>
                <input type="date" name="Ngay1" value="2024-01-01" class="date-select">
                <input type="date" name="Ngay2" value="2024-01-01" class="date-select">
                <input type="hidden" id="MaCN" name="MaCN" value="0">
                <input type="submit" value="Submit" class="submit-button">
            </form>

            <!-- Table Section -->
            <section class="table-section">
                <table class="menu-table">
                    <thead>
                        <tr>
                            <th>Chi Nhánh</th>
                            <th>Năm</th>
                            <th>Doanh Thu</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each doanhthu}}
                        <tr>
                            <td>{{this.MaChiNhanh}}</td>
                            <td>{{this.Nam}}</td>
                            <td>{{this.DoanhThu}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </section>
        </div>
    </div>
</body>
</html>
