<div class="flex">
    <!-- Sidebar -->
    <div class="w-64">
        {{> admin_partials/sidebar}}
    </div>

    <div class="flex-1 p-8 bg-gray-100">
        <div class="bg-white rounded-lg shadow p-6">
            <h1 class="text-3xl font-bold text-center mb-6">Daily Revenue Statistics</h1>

            <!-- Form Filter -->
            <form method="POST" class="flex flex-col md:flex-row gap-6 items-center mb-6">
                <div>
                    <label for="MaCN" class="block font-semibold text-gray-600">Select Branch:</label>
                    <select name="MaCN" id="MaCN" class="p-2 border rounded focus:ring-2 focus:ring-blue-500">
                        <option value="" disabled>-- Select Branch --</option>
                        {{#each chinhanh}}
                        <option value="{{this.MaCN}}">{{this.TenCN}}</option>
                        {{/each}}
                    </select>
                </div>
                <div>
                    <label for="Ngay1" class="block font-semibold text-gray-600">Start Date:</label>
                    <input type="date" name="Ngay1" id="Ngay1" class="p-2 border rounded">
                </div>
                <div>
                    <label for="Ngay2" class="block font-semibold text-gray-600">End Date:</label>
                    <input type="date" name="Ngay2" id="Ngay2" class="p-2 border rounded">
                </div>
                <button type="submit"
                    class="px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700">Filter</button>
            </form>

            <!-- Table -->
            <div class="overflow-x-auto">
                <table class="table-auto w-full border-collapse border border-gray-300 shadow-sm">
                    <thead class="bg-blue-600 text-white">
                        <tr>
                            <th class="border p-4 text-left">Branch</th>
                            <th class="border p-4 text-left">Date</th>
                            <th class="border p-4 text-right">Revenue</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each doanhthu}}
                        <tr class="hover:bg-gray-100">
                            <td class="border p-4">{{this.MaChiNhanh}}</td>
                            <td class="border p-4">{{this.Ngay}}</td>
                            <td class="border p-4 text-right">{{this.DoanhThu}}</td>
                        </tr>
                        {{/each}}
                        {{#unless doanhthu}}
                        <tr>
                            <td colspan="3" class="text-center p-6 text-gray-500">No data available.</td>
                        </tr>
                        {{/unless}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>