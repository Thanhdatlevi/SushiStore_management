<style>
    h1 {
        font-size: 1.875rem;
        font-weight: bold;
        color: #2c3e50;
        text-align: center;
        margin-bottom: 1rem;
    }

    select,
    input[type="date"],
    input[type="submit"] {
        padding: 10px;
        font-size: 1rem;
        border: 1px solid #d1d5db;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

    select:focus,
    input[type="date"]:focus {
        border-color: #3498db;
        outline: none;
        box-shadow: 0 0 5px rgba(52, 152, 219, 0.5);
    }

    input[type="submit"] {
        background-color: #3498db;
        color: white;
        font-weight: bold;
        cursor: pointer;
    }

    input[type="submit"]:hover {
        background-color: #2980b9;
    }

    .menu-table th {
        background-color: #3498db;
        color: white;
    }

    .menu-table td,
    .menu-table th {
        padding: 12px;
        text-align: center;
        border: 1px solid #ddd;
    }

    .menu-table tbody tr:hover {
        background-color: #f1f1f1;
    }

    .container {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin: 20px auto;
    }

    .form-container {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-bottom: 20px;
        align-items: center;
    }

    .form-container .selectBox {
        width: 50%;
    }

    .form-container input[type="date"] {
        max-width: 200px;
    }

    .form-container input[type="submit"] {
        padding: 10px 20px;
    }

    .form-container select {
        width: 100%;
    }
</style>

